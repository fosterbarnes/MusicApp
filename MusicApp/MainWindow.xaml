<Window x:Class="MusicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicApp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:titleBar="clr-namespace:MusicApp.TitleBarWithPlayerControls"
        xmlns:converters="clr-namespace:MusicApp.Converters"
        mc:Ignorable="d"
        Title="Music App" Height="700" Width="1200"
        Background="#1E1E1E"
        WindowStyle="None"
        AllowsTransparency="False"
        ResizeMode="CanResize"
        MinWidth="1000" MinHeight="500">

    <!-- Remove white bar on top of window-->
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>

    <!-- ===========================================
         WINDOW RESOURCES
         =========================================== -->
    <Window.Resources>
        <ResourceDictionary>
            <!-- Material Design Theme and Custom Styles -->
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Purple" SecondaryColor="Lime" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <!-- ===========================================
         MAIN WINDOW LAYOUT
         =========================================== -->
    <Border BorderBrush="#404040" BorderThickness="1" Background="#1E1E1E">
        <Grid Background="#1E1E1E">
            <!-- Main Grid Definitions -->
            <Grid.RowDefinitions>
                <RowDefinition Height="85"/>
                <!-- Title Bar Row -->
                <RowDefinition Height="*"/>
                <!-- Main Content Row -->
                <RowDefinition Height="Auto"/>
                <!-- Status Bar Row -->
            </Grid.RowDefinitions>

            <!-- ===========================================
                 TITLE BAR SECTION
                 =========================================== -->
            <titleBar:TitleBar x:Name="titleBarPlayer" Grid.Row="0"/>

            <!-- ===========================================
                 MAIN CONTENT AREA
                 Contains: Sidebar Navigation + Content Views
                 =========================================== -->
            <Grid Grid.Row="1" x:Name="mainContentGrid">
                <!-- Main Content Grid Definitions -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="sidebarColumn" Width="180" MinWidth="180" MaxWidth="500"/>
                    <!-- Sidebar Width (Resizable) -->
                    <ColumnDefinition Width="5"/>
                    <!-- GridSplitter Column -->
                    <ColumnDefinition Width="*"/>
                    <!-- Content Area (Expands) -->
                </Grid.ColumnDefinitions>

                <!-- ===========================================
                     SIDEBAR NAVIGATION SECTION
                     =========================================== -->
                <Border Grid.Column="0" 
                        Background="#2D2D2D" 
                        BorderBrush="#404040" 
                        BorderThickness="0">
                    <StackPanel Margin="10">

                        <!-- App Title -->
                        <TextBlock Text="Music App" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White" 
                                   Margin="0,0,0,20"/>

                        <!-- Navigation Buttons -->
                        <Button x:Name="btnArtists" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnArtists_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="AccountMusic" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Artists" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnAlbums" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnAlbums_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Album" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Albums" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnLibrary" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnLibrary_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Music" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Songs" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnGenres" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnGenres_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="MusicNote" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Genres" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnPlaylists" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnPlaylists_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PlaylistMusic" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Playlists" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Separator -->
                        <Separator Margin="0,5" Background="#404040"/>

                        <Button x:Name="btnRecentlyPlayed" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnRecentlyPlayed_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="History" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Recently Played" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnQueue" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnQueue_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="QueueMusic" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Queue" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Separator -->
                        <Separator Margin="0,5" Background="#404040"/>

                        <!-- Action Buttons -->
                        <Button x:Name="btnAddFolder" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnAddFolder_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FolderPlus" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Add Music Folder" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnRescanLibrary" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnRescanLibrary_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Re-Scan Library" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnRemoveFolder" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnRemoveFolder_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FolderRemove" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Remove Music Folder" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnClearSettings" 
                                Style="{StaticResource SidebarNavigationButton}"
                                Click="BtnClearSettings_Click">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="DeleteSweep" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <TextBlock Text="Clear Settings" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Border>

                <!-- ===========================================
                     RESIZABLE SPLITTER
                     =========================================== -->
                <GridSplitter Grid.Column="1"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             Style="{StaticResource CustomGridSplitter}"
                             Cursor="SizeWE"
                             ShowsPreview="False"
                             ResizeDirection="Columns"
                             DragCompleted="GridSplitter_DragCompleted"/>

                <!-- ===========================================
                     MAIN CONTENT VIEWS SECTION
                     =========================================== -->
                <Grid Grid.Column="2" Background="#1E1E1E">
                    <!-- Content Views Grid Definitions -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header Row -->
                        <RowDefinition Height="*"/>
                        <!-- Content Row (Expands) -->
                    </Grid.RowDefinitions>

                    <!-- ===========================================
                         CONTENT HEADER SECTION
                         =========================================== -->


                    <!-- ===========================================
                         CONTENT AREA SECTION
                         =========================================== -->
                    <Grid Grid.Row="1" x:Name="mainContent" Margin="0">

                        <!-- ===========================================
                             SONGS VIEW
                             =========================================== -->
                        <Grid x:Name="libraryView" Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <!-- Music List (Expands) -->
                            </Grid.RowDefinitions>

                            <!-- Music List -->
                            <ListView x:Name="lstMusic" 
                                      Grid.Row="0" 
                                      Background="Transparent" 
                                      BorderThickness="0" 
                                      Foreground="White"
                                      SelectionChanged="LstMusic_SelectionChanged">
                            </ListView>
                        </Grid>

                        <!-- ===========================================
                             QUEUE VIEW
                             =========================================== -->
                        <Grid x:Name="queueView" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <!-- Queue List (Expands) -->
                            </Grid.RowDefinitions>

                            <!-- Queue List -->
                            <ListView x:Name="lstQueue" 
                                      Grid.Row="0" 
                                      Background="Transparent" 
                                      BorderThickness="0" 
                                      Foreground="White"
                                      SelectionChanged="LstQueue_SelectionChanged">
                            </ListView>
                        </Grid>

                        <!-- ===========================================
                             PLAYLISTS VIEW
                             =========================================== -->
                        <Grid x:Name="playlistsView" Visibility="Collapsed">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock Text="Playlists" 
                                               FontSize="20" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               Margin="0,0,0,20"/>

                                    <Button Content="Create New Playlist" 
                                            Style="{StaticResource MaterialDesignRaisedButton}"
                                            HorizontalAlignment="Left" 
                                            Margin="0,0,0,20"/>

                                    <ListView x:Name="lstPlaylists" 
                                              Background="Transparent" 
                                              Foreground="White"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>

                        <!-- ===========================================
                             RECENTLY PLAYED VIEW
                             =========================================== -->
                        <Grid x:Name="recentlyPlayedView" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <!-- Recently Played List (Expands) -->
                            </Grid.RowDefinitions>

                            <!-- Recently Played List -->
                            <ListView x:Name="lstRecentlyPlayed" 
                                      Grid.Row="0" 
                                      Background="Transparent" 
                                      BorderThickness="0" 
                                      Foreground="White"
                                      SelectionChanged="LstRecentlyPlayed_SelectionChanged">
                            </ListView>
                        </Grid>

                        <!-- ===========================================
                             ARTISTS VIEW
                             =========================================== -->
                        <Grid x:Name="artistsView" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <!-- Artists List (Expands) -->
                            </Grid.RowDefinitions>

                            <!-- Artists List -->
                            <ListView x:Name="lstArtists" 
                                      Grid.Row="0" 
                                      Background="Transparent" 
                                      BorderThickness="0" 
                                      Foreground="White"
                                      SelectionChanged="LstArtists_SelectionChanged">
                            </ListView>
                        </Grid>

                        <!-- ===========================================
                             ALBUMS VIEW
                             =========================================== -->
                        <Grid x:Name="albumsView" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <!-- Albums List (Expands) -->
                            </Grid.RowDefinitions>

                            <!-- Albums List -->
                            <ListView x:Name="lstAlbums" 
                                      Grid.Row="0" 
                                      Background="Transparent" 
                                      BorderThickness="0" 
                                      Foreground="White"
                                      SelectionChanged="LstAlbums_SelectionChanged">
                            </ListView>
                        </Grid>

                        <!-- ===========================================
                             GENRES VIEW
                             =========================================== -->
                        <Grid x:Name="genresView" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <!-- Genres List (Expands) -->
                            </Grid.RowDefinitions>

                            <!-- Genres List -->
                            <ListView x:Name="lstGenres" 
                                      Grid.Row="0" 
                                      Background="Transparent" 
                                      BorderThickness="0" 
                                      Foreground="White"
                                      SelectionChanged="LstGenres_SelectionChanged">
                            </ListView>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

            <!-- ===========================================
                 STATUS BAR SECTION
                 =========================================== -->
            <Border Grid.Row="2" 
                    Background="#2D2D2D" 
                    BorderBrush="#404040" 
                    BorderThickness="0,1,0,0"
                    Height="20"
                    VerticalAlignment="Bottom">
                <Grid>
                    <!-- Progress Bar Background (integrated) -->
                    <Border x:Name="progressBarBackground"
                            Background="#2D2D2D"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>

                    <!-- Progress Bar Fill -->
                    <Border x:Name="progressBarFill"
                            Background="#705399"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Stretch"
                            Width="0"
                            Opacity="0.3"/>

                    <!-- Status Text (on top of progress bar) -->
                    <TextBlock x:Name="statusBarText" 
                               Text="0 songs, 0 albums, 0.0 days, 0.00 GB" 
                               Foreground="White" 
                               FontSize="12"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Panel.ZIndex="1"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
